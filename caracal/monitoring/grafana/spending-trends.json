{
  "dashboard": {
    "title": "Caracal Core - Spending Trends",
    "tags": ["caracal", "spending", "budget", "trends", "v0.3"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Spending Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(caracal_gateway_requests_total[5m])) * avg(caracal_policy_evaluation_duration_seconds)",
            "legendFormat": "Spending Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "$/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Top 10 Spenders",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "topk(10, sum(rate(caracal_policy_evaluations_total{decision=\"allowed\"}[5m])) by (agent_id))",
            "legendFormat": "{{agent_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Budget Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(caracal_provisional_charges_active) by (agent_id)",
            "legendFormat": "{{agent_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Active Charges"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Policy Denials",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(caracal_policy_evaluations_total{decision=\"denied\"}[5m])",
            "legendFormat": "{{agent_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Denials/sec"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Policy Denial Rate",
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "sum"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "High policy denial rate detected (>10/sec)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 5,
        "title": "Provisional Charges Created",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(caracal_provisional_charges_created_total[5m])",
            "legendFormat": "{{agent_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Charges/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Provisional Charges Released",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(caracal_provisional_charges_released_total[5m])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Releases/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Active Provisional Charges",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(caracal_provisional_charges_active)",
            "legendFormat": "Active Charges",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 10000}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Expired Provisional Charges",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(caracal_provisional_charges_expired_total[5m])",
            "legendFormat": "Expired Charges",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Expirations/sec"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Provisional Charge Expiration Rate",
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "High provisional charge expiration rate (>5/sec) - possible system issues",
          "noDataState": "no_data"
        }
      },
      {
        "id": 9,
        "title": "DLQ Size",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "caracal_dlq_size",
            "legendFormat": "DLQ Messages",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "alert": {
          "name": "High DLQ Size",
          "conditions": [
            {
              "evaluator": {"params": [1000], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Dead letter queue size is high (>1000 messages)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 10,
        "title": "Snapshot Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(caracal_snapshots_created_total[5m])",
            "legendFormat": "{{trigger}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Snapshots/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
