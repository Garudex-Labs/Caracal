{
  "dashboard": {
    "title": "Caracal Core - Policy Versioning",
    "tags": ["caracal", "policy", "versioning", "audit", "v0.3"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Policy Version Creation Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(caracal_policy_versions_created_total[5m])",
            "legendFormat": "{{change_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Versions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Policy Versions by Change Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(caracal_policy_versions_created_total) by (change_type)",
            "legendFormat": "{{change_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 3,
        "title": "Policy History Queries",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(caracal_policy_version_queries_total[5m])",
            "legendFormat": "{{query_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Queries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Total Policy Versions",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(caracal_policy_versions_created_total)",
            "legendFormat": "Total Versions",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 5,
        "title": "Policy Changes Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "increase(caracal_policy_versions_created_total[1h])",
            "legendFormat": "{{change_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Changes per Hour"},
          {"format": "short"}
        ]
      }
    ]
  }
}
