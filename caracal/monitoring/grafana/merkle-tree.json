{
  "dashboard": {
    "title": "Caracal Core - Merkle Tree Operations",
    "tags": ["caracal", "merkle", "cryptography", "v0.3"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Batch Creation Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(caracal_merkle_batches_created_total[5m])",
            "legendFormat": "Batches/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Batches/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Batch Size Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(caracal_merkle_batch_size_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(caracal_merkle_batch_size_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(caracal_merkle_batch_size_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Events per Batch"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Tree Computation Duration (p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(caracal_merkle_tree_computation_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "name": "Slow Merkle Tree Computation",
          "conditions": [
            {
              "evaluator": {"params": [0.1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Merkle tree computation is slow (p99 > 100ms)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 4,
        "title": "Signing Duration (p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(caracal_merkle_signing_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Verification Duration (p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(caracal_merkle_verification_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "name": "Slow Merkle Verification",
          "conditions": [
            {
              "evaluator": {"params": [0.005], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Merkle verification is slow (p99 > 5ms)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 6,
        "title": "Verification Failures (CRITICAL)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(caracal_merkle_verification_failures_total[5m])",
            "legendFormat": "{{failure_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Failures/sec"},
          {"format": "short"}
        ],
        "alert": {
          "name": "Merkle Verification Failure - TAMPER DETECTED",
          "conditions": [
            {
              "evaluator": {"params": [0], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "1m", "now"]},
              "reducer": {"params": [], "type": "sum"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "30s",
          "handler": 1,
          "message": "CRITICAL: Merkle verification failed - possible ledger tampering detected!",
          "noDataState": "no_data"
        }
      },
      {
        "id": 7,
        "title": "Events in Current Batch",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "caracal_merkle_events_in_current_batch",
            "legendFormat": "Events",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 8,
        "title": "Batch Processing Duration (p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(caracal_merkle_batch_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      }
    ]
  }
}
