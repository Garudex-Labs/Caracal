{
  "dashboard": {
    "title": "Caracal Core - Resource Allowlists",
    "tags": ["caracal", "allowlist", "security", "v0.3"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Allowlist Check Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(caracal_allowlist_checks_total[5m])",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Checks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Match vs Miss Ratio",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(caracal_allowlist_matches_total)",
            "legendFormat": "Matches",
            "refId": "A"
          },
          {
            "expr": "sum(caracal_allowlist_misses_total)",
            "legendFormat": "Misses",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 3,
        "title": "Allowlist Check Duration (p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(caracal_allowlist_check_duration_seconds_bucket[5m]))",
            "legendFormat": "{{pattern_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "name": "Slow Allowlist Check",
          "conditions": [
            {
              "evaluator": {"params": [0.002], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Allowlist check is slow (p99 > 2ms)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(caracal_allowlist_cache_hits_total[5m]) / (rate(caracal_allowlist_cache_hits_total[5m]) + rate(caracal_allowlist_cache_misses_total[5m]))",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Hit Rate"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Matches by Pattern Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(caracal_allowlist_matches_total[5m])",
            "legendFormat": "{{pattern_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Matches/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Denied Requests by Agent",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "topk(10, rate(caracal_allowlist_misses_total[5m]))",
            "legendFormat": "{{agent_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Denials/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Active Patterns per Agent",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(caracal_allowlist_patterns_active)",
            "legendFormat": "Total Patterns",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 8,
        "title": "Allowlist Check Results",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(caracal_allowlist_checks_total[5m])) by (result)",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Checks/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
