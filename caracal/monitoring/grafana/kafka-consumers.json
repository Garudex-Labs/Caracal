{
  "dashboard": {
    "title": "Caracal Core - Kafka Consumers",
    "tags": ["caracal", "kafka", "consumers", "v0.3"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Consumer Lag by Topic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(caracal_kafka_consumer_lag) by (topic, consumer_group)",
            "legendFormat": "{{consumer_group}} - {{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages Behind"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Consumer Lag",
          "conditions": [
            {
              "evaluator": {"params": [10000], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Kafka consumer lag is high (>10k messages)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 2,
        "title": "Message Processing Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(caracal_kafka_messages_consumed_total{status=\"success\"}[5m])",
            "legendFormat": "{{consumer_group}} - {{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Messages/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Message Processing Duration (p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(caracal_kafka_message_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "{{consumer_group}} - {{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "name": "Slow Message Processing",
          "conditions": [
            {
              "evaluator": {"params": [1.0], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Message processing is slow (p99 > 1s)",
          "noDataState": "no_data"
        }
      },
      {
        "id": 4,
        "title": "Consumer Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(caracal_kafka_consumer_errors_total[5m])",
            "legendFormat": "{{consumer_group}} - {{topic}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Consumer Rebalances",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(caracal_kafka_consumer_rebalances_total[5m])",
            "legendFormat": "{{consumer_group}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Rebalances/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Consumer Group Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "count(caracal_kafka_consumer_lag < 1000) by (consumer_group)",
            "legendFormat": "{{consumer_group}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 3}
              ]
            }
          }
        }
      }
    ]
  }
}
